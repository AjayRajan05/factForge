# Database Configuration
DATABASE_URL=postgresql://postgres:password@postgres:5432/factforge
POSTGRES_DB=factforge
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# Milvus Vector Database
MILVUS_HOST=milvus
MILVUS_PORT=19530
MILVUS_USER=root
MILVUS_PASSWORD=Milvus

# Ollama LLM Configuration (Fallback)
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2:3b
OLLAMA_TEMPERATURE=0.1

# Google Vertex AI Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GCP_CREDENTIALS_PATH=/path/to/service-account-key.json
VERTEX_AI_MODEL=gemini-1.5-pro
VERTEX_AI_TEMPERATURE=0.1
VERTEX_AI_MAX_TOKENS=1000

# LLM Provider Selection (vertex_ai, ollama)
LLM_PROVIDER=vertex_ai

# Security
HMAC_KEY=replace_with_random_hex_key_32_chars_minimum
JWT_SECRET=replace_with_random_jwt_secret_key_32_chars_minimum
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Tesseract OCR
TESSDATA_PREFIX=/usr/share/tessdata
TESSERACT_LANGUAGES=eng+hin+tam+kan

# Model Configuration
EMBEDDING_MODEL=paraphrase-multilingual-mpnet-base-v2
CLASSIFIER_MODEL_PATH=/app/models/classifier
LID_MODEL_PATH=/app/models/lid.176.ftz

# Supported Languages
LANGUAGES=ta,hi,en,kn
DEFAULT_LANGUAGE=en

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Worker Configuration
WORKER_CONCURRENCY=4
WORKER_PREFETCH=1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# File Storage
DATA_DIR=/app/data
RAW_HTML_DIR=/app/data/raw
SCREENSHOTS_DIR=/app/data/screenshots

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Audit Configuration
AUDIT_RETENTION_DAYS=365
AUDIT_BATCH_SIZE=100

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Development
DEBUG=false
RELOAD=false
